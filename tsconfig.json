{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true,
    "target": "esnext",
    "lib": ["ESNext"],

    /* Module system: */
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",

    /* Import options: */
    "resolveJsonModule": true,

    /* Strictness: */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,

    /* Directory */
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "types/**/*.ts"]
}
