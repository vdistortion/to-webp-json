{
  "name": "to-webp-json",
  "version": "0.3.4",
  "description": "Image conversion for static websites",
  "main": "./dist/index.js",
  "type": "module",
  "bin": "./dist/index.js",
  "homepage": "https://vdistortion.github.io/to-webp-json/",
  "repository": {
    "type": "git",
    "url": "git@github.com:astrotrain55/to-webp-json.git"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "public:lib": "npm run build && npm publish",
    "public:gh-pages": "gh-pages -d docs/.vitepress/dist -t --nojekyll",
    "public": "npm run docs:build && npm run public:gh-pages",
    "format": "prettier . --write",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "typescript",
    "library",
    "webp",
    "json",
    "static"
  ],
  "author": "Валентин <valentin.distortion@gmail.com>",
  "license": "GPL",
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "directory-structure-json": "^1.0.0",
    "is-image": "^4.0.0",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "@types/directory-structure-json": "^1.0.2",
    "@types/node": "^22.15.23",
    "gh-pages": "^6.3.0",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  },
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ]
}
