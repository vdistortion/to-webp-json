{
  "name": "to-webp-json",
  "version": "0.1.0",
  "description": "Convert images to webp structure",
  "main": "./dist/index.js",
  "type": "module",
  "bin": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:astrotrain55/to-webp-json.git"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "public:lib": "npm run build && npm publish",
    "format:all": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|jsx|tsx)\"",
    "format:check": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|jsx|tsx)\""
  },
  "keywords": [
    "typescript",
    "library",
    "webp",
    "json",
    "static"
  ],
  "author": "",
  "license": "GPL",
  "dependencies": {
    "directory-structure-json": "^1.0.0",
    "is-image": "^4.0.0",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.13",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "types": "./index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ]
}
