{
  "name": "to-webp-json",
  "version": "0.3.1",
  "description": "Convert images to webp structure",
  "main": "./dist/index.js",
  "type": "module",
  "bin": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:astrotrain55/to-webp-json.git"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "public:lib": "npm run build && npm publish",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|tsx)\""
  },
  "keywords": [
    "typescript",
    "library",
    "webp",
    "json",
    "static"
  ],
  "author": "Валентин <valentin.distortion@gmail.com>",
  "license": "GPL",
  "dependencies": {
    "directory-structure-json": "^1.0.0",
    "inquirer": "^9.2.23",
    "is-image": "^4.0.0",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.12.13",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ]
}
